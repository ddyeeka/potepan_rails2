<div class="FormWrapper">
  <section class="FormContainer">
    <h2>施設情報の編集</h2>
    <%= form_with(model: @room, local: true) do |f| %>
      <div class="RoomsForm__input-group">
        <%= f.label :room_name,"施設名" %>
        <%= f.text_field :room_name,placeholder:"ルーム名を入力" %>
      </div>
      <div class="RoomsForm__input-group">
        <%= f.label :body,"施設詳細" %>
        <%= f.text_area :body,placeholder:"施設詳細を入力" %>
      </div>
      <div class="RoomsForm__input-group">
        <%= f.label :price,"料金" %>
        <%= f.number_field :price,placeholder:"一日あたりの料金を入力" %>
      </div>
      <div class="RoomsForm__input-group">
        <%= f.label :address,"住所" %>
        <%= f.text_field :address,placeholder:"住所を入力" %>
      </div>
      <div class="RoomsForm__input-group">
        <%= f.label :image,"施設画像" %>
        <%= f.file_field :image %>
      </div>
      
      <ul>
        <li><%= f.submit "保存" %></li>
        <li><%= link_to "キャンセル", :rooms %></li>
      </ul>
    <% end %>
  </section>
</div>